<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Elsherif_Bosta::bosta" title="Bosta" sortOrder="100">
                        <resource id="Elsherif_Bosta::delivery" title="Deliveries" sortOrder="10"/>
                        <resource id="Elsherif_Bosta::pickup" title="Pickups" sortOrder="20"/>
                        <resource id="Elsherif_Bosta::config" title="Configuration" sortOrder="99"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Elsherif_Bosta::config_bosta" title="Bosta Section"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
