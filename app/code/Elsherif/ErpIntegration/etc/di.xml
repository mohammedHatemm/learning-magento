<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Configure custom logger -->
    <type name="Elsherif\ErpIntegration\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Elsherif\ErpIntegration\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">ErpIntegration</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Elsherif\ErpIntegration\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <!-- Inject custom logger into ErpClient -->
    <type name="Elsherif\ErpIntegration\Model\ErpClient">
        <arguments>
            <argument name="logger" xsi:type="object">Elsherif\ErpIntegration\Logger\Logger</argument>
        </arguments>
    </type>

    <!-- Inject custom logger into observers -->
    <type name="Elsherif\ErpIntegration\Observer\CustomerRegisterSuccess">
        <arguments>
            <argument name="logger" xsi:type="object">Elsherif\ErpIntegration\Logger\Logger</argument>
        </arguments>
    </type>

    <type name="Elsherif\ErpIntegration\Observer\CustomerSaveAfter">
        <arguments>
            <argument name="logger" xsi:type="object">Elsherif\ErpIntegration\Logger\Logger</argument>
        </arguments>
    </type>
</config>
