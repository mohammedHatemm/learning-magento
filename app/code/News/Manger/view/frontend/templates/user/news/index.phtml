/** @var \News\Manger\Block\User\News\Index $block */

function renderCategoryTree($categories, $block, $level = 0)
{
  if (empty($categories)) {
    return '';
  }

  $html = '<ul class="category-tree-level-' . $level . '">';

  foreach ($categories as $category) {
    $newsCount = $block->getNewsCountForCategory($category['id']);
    $hasChildren = isset($category['children']) && !empty($category['children']);

    $html .= '<li class="category-tree-item">';
    $html .= '<div class="category-item-content">';
    $html .= '<a href="' . $block->escapeUrl($category['url']) . '" class="category-link">';
    $html .= '<i class="icon-' . ($hasChildren ? 'folder' : 'file') . '"></i>';
    $html .= $block->escapeHtml($category['name']);
    $html .= '</a>';
    $html .= '<span class="category-meta">(' . $newsCount . ' ' . __('news') . ')</span>';
    $html .= '</div>';

    if ($hasChildren) {
      $html .= renderCategoryTree($category['children'], $block, $level + 1);
    }

    $html .= '</li>';
  }

  $html .= '</ul>';
  return $html;
}

