<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">news_category_listing.news_category_listing_data_source</item>
            <item name="deps" xsi:type="string">news_category_listing.news_category_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">news_category_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Category</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/new</item>
            </item>
        </item>
    </argument>

    <dataSource name="news_category_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="indexField" xsi:type="string">category_id</param>
            </storageConfig>
        </settings>
        <dataProvider name="news_category_listing_data_source"
                      class="News\Manger\Ui\DataProvider\Category\CategoryGridDataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>category_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="placeholder" xsi:type="string" translate="true">Search Category...</item>
                </item>
            </argument>
        </filterSearch>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="news_category_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">category_id</item>
                </item>
            </argument>
        </selectionsColumn>

        <column name="category_id" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">ID</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">asc</item>
                </item>
            </argument>
        </column>

        <column name="category_name" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Category Name</item>
                    <item name="filter" xsi:type="string">text</item>
                </item>
            </argument>
        </column>

        <column name="parent_name" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Parent Category</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>

        <column name="category_status" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="options" xsi:type="object">News\Manger\Ui\Component\Options\CategoryStatus</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                </item>
            </argument>
        </column>

        <column name="category_description" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>

        <column name="formatted_name" sortOrder="55">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Formatted Name</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
                    <item name="componentType" xsi:type="string">column</item>
                    <item name="dataType" xsi:type="string">text</item>
                </item>
            </argument>
        </column>
        <column name="full_path_array" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Full Path Array</item>
                    <item name="componentType" xsi:type="string">column</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="escape" xsi:type="boolean">false</item> <!-- إضافة للسماح بـ HTML -->
                    <item name="render" xsi:type="string">html</item> <!-- إضافة لضمان عرض HTML -->
                </item>
            </argument>
        </column>
<!-- child count  -->
 <column name="children_count" sortOrder="86">
    <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Children Count</item>
            <item name="componentType" xsi:type="string">column</item>
            <item name="dataType" xsi:type="string">number</item>
            <item name="sortable" xsi:type="boolean">false</item>
        </item>
    </argument>
</column>


   <column name="full_path_array" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Full Path Array</item>
                    <item name="componentType" xsi:type="string">column</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="escape" xsi:type="boolean">false</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                </item>
            </argument>
        </column>

<column name="direct_parents">
    <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Direct Parent</item>
            <item name="componentType" xsi:type="string">column</item>
            <item name="dataType" xsi:type="string">text</item>
            <item name="sortable" xsi:type="boolean">false</item>
        </item>
    </argument>
</column>

<!--  -->




<!--  -->

<!-- ✅ العمود المضاف لحل الخطأ -->
        <column name="level" sortOrder="85">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Level</item>
                    <item name="componentType" xsi:type="string">column</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>

        <column name="created_at" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Created At</item>
                    <item name="filter" xsi:type="string">date</item>
                    <item name="dataType" xsi:type="string">date</item>
                </item>
            </argument>
        </column>

        <column name="updated_at" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Updated At</item>
                    <item name="filter" xsi:type="string">date</item>
                    <item name="dataType" xsi:type="string">date</item>
                </item>
            </argument>
        </column>

        <actionsColumn name="actions" class="News\Manger\Ui\Component\Listing\Column\CategoryActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">category_id</item>
                    <item name="viewUrlPath" xsi:type="string">news/category/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">category_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
